{
  "name": "shakespeare-quotes",
  "version": "1.0.0",
  "description": "Collection of Shakespeare Quotes",
  "main": "server/server.js",
  "scripts": {
    "install-all": "npm install && cd client && npm install",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "start": "node server/server.js",
    "client": "cd client && npm start",
    "server": "nodemon server/server.js",
    "build-react": "cd client && rm -rf build && npm run build",
    "test": "set NODE_ENV=test&& mocha --require babel-register --slow 0 --timeout 15000  --exit",
    "test-coverage": "set NODE_ENV=test&& nyc mocha --require babel-register --slow 0 --timeout 15000 --exit",
    "test-watch": "NODE_ENV=test nodemon --exec \"mocha --recursive --require babel-register --slow 0\"",
    "lint": "eslint . --ext .js --ignore-pattern 'node_modules/' --ignore-pattern 'build/'",
    "heroku-postbuild": "cd client && npm install --only=dev && npm install && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cazyw/shakespeare-quotes.git"
  },
  "keywords": [
    "shakespeare",
    "quotes"
  ],
  "author": "Carol Wong",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.18.2",
    "dotenv": "^5.0.1",
    "express": "^4.16.2",
    "mongoose": "^5.2.16",
    "pluralize": "^7.0.0",
    "react-paginate": "^5.2.4",
    "sanitize-html": "^1.18.5"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "chai": "*",
    "concurrently": "^3.5.0",
    "eslint": "^4.18.1",
    "eslint-plugin-react": "^7.7.0",
    "mocha": "*",
    "nodemon": "^1.18.3",
    "nyc": "^13.0.1",
    "puppeteer": "^1.7.0",
    "sinon": "^6.3.3",
    "supertest": "^3.0.0"
  },
  "engines": {
    "node": "8.9.1",
    "npm": "5.8.x"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  }
}
